+-------------------------------------+
|              User                   |
+-------------------------------------+
| - userId: int                       |
| - username: string                  |
| - password: string                  |
| - email: string                     |
| + register(): void                  |
| + login(): void                     |
| + search(query: string): void       |
+-------------------------------------+
               |
               |
+-------------------------------------+
|            Seller                   |
+-------------------------------------+
| - sellerId: int                     |
| - businessName: string              |
| - products: List<Product>           |
| + addProduct(product: Product): void|
| + updateProduct(product: Product): void |
| + removeProduct(productId: int): void |
+-------------------------------------+
               |
               |
+-------------------------------------+
|            Service Provider         |
+-------------------------------------+
| - providerId: int                   |
| - serviceName: string               |
| - availability: Schedule            |
| + manageReservations(): void        |
| + updateAvailability(schedule: Schedule): void |
+-------------------------------------+
               |
               |
+-------------------------------------+
|         Skill Owner                 |
+-------------------------------------+
| - skillOwnerId: int                  |
| - skills: List<Skill>               |
| + addSkill(skill: Skill): void       |
| + respondToRequest(request: Request): void |
+-------------------------------------+
               |
               |
+-------------------------------------+
|              Product                |
+-------------------------------------+
| - productId: int                    |
| - name: string                      |
| - description: string               |
| - price: decimal                    |
+-------------------------------------+
               |
               |
+-------------------------------------+
|             Schedule                |
+-------------------------------------+
| - availabilitySlots: List<TimeSlot>  |
| + addSlot(slot: TimeSlot): void      |
| + removeSlot(slot: TimeSlot): void   |
+-------------------------------------+
               |
               |
+-------------------------------------+
|               Request               |
+-------------------------------------+
| - requestId: int                    |
| - user: User                        |
| - skillOwner: SkillOwner            |
| - status: string                    |
| + acceptRequest(): void             |
| + rejectRequest(): void             |
+-------------------------------------+
               |
               |
+-------------------------------------+
|              Skill                  |
+-------------------------------------+
| - skillId: int                      |
| - name: string                      |
| - description: string               |
+-------------------------------------+
               |
               |
+-------------------------------------+
|           TimeSlot                  |
+-------------------------------------+
| - startTime: DateTime               |
| - endTime: DateTime                 |
+-------------------------------------+
